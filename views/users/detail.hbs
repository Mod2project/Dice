<div class="row justify-content-center">
  <div class="col-12 col-md-3 mb-2">
    <div class="card">
      <img src={{user.avatar}} class="card-img-top" alt={{user.name}}>
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <form action="/logout" method="GET">
        <button type="submit" class="btn btn-outline-warning mx-0.8 mb-3">Log out</button>
        </form>
      </div>
    </div>
  </div>
 </div>

 <div>
    <h5>Next events</h5>
 </div>
   <div class="col-12"><h3 class="fw-light mb-0"> </h3><hr class="mb-5"></div>
  {{#each user.events as |event|}}
    <div class="row justify-content-center">
      <div class="col-12 col-md-5 mb-5">
        <div class="card">
          <img src="{{event.poster}}" class="card-img-top" alt="{{event.name}}">
        <div class="card-body">
          <h5 class="card-title">{{event.name}}</h5>
        </div>
      </div>
    </div>
  {{/each}}
